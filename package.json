{
  "name": "osascript-tag",
  "description": "A JavaScript template literal tag that executes OSA scripts (AppleScript, JavaScript, etc.)",
  "version": "0.1.0",
  "author": "Waseem Dahman <dwaseem@icloud.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "wsmd/osascript-tag",
  "homepage": "https://github.com/wsmd/osascript-tag",
  "bugs": {
    "url": "https://github.com/wsmd/osascript-tag/issues"
  },
  "keywords": [
    "apple",
    "applescript",
    "automation",
    "javascript",
    "jxa",
    "macos",
    "osa",
    "osascript",
    "osx"
  ],
  "scripts": {
    "test": "jest",
    "test:all": "yarn typecheck && yarn lint && yarn test:coverage",
    "test:coverage": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "lint": "tslint --project .",
    "typecheck": "tsc --noEmit",
    "build": "tsc --build tsconfig.build.json",
    "prebuild": "rm -rf dist",
    "prepack": "yarn test:all && yarn build"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "watchPathIgnorePatterns": [
      "dist"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "collectCoverageFrom": [
      "lib/**/*.ts"
    ],
    "roots": [
      "<rootDir>/lib/",
      "<rootDir>/tests/"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^11.13.8",
    "coveralls": "^3.0.3",
    "jest": "^24.7.1",
    "ts-jest": "^24.0.2",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
